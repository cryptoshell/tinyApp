<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
   <header>
      <% include ./partials/_header %>
    </header>
    <% if (user){ %>
      <div class="container">
      <div class="row">
        <div class="Absolute-Center is-Responsive">
          <div class="form-login">
            <br/>
            <h3>ShortURL: <%= shortURL %></h3>
            <form action="/urls/<%= shortURL %>" method="POST">
              <input id="longURL" type="text" name="longURL" placeholder="Enter a new 'http://example.com'" class="form-control input-sm chat-input" </input>
              <div class="wrapper">
              <span class="group-btn">
                <br/>
                <center><input type="submit" value="Update" class="btn btn-info btn-sm" style="width:150px;height:30px"><i class="fa fa-sign-in"></i></input></center>
              </span>
              </div>
            </form>
          </div>
        </div>
      </div>
      </div>
    <% } else { %>
      <br/>
      <br/>
      <br/>
      <center>
        <a href="/register" class="btn btn-info btn-lg">Register Now!</a>
        <br/>
        <br/>
        <h4>or</h4>
        <br/>
        <a href="/login" class="btn btn-info btn-lg">Login</a>
        <h5>to access URLs!</h5>
      </center>
    <% } %>
  </body>
</html>